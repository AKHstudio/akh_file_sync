{
    "name": "@akhstudio/akhsync",
    "version": "1.1.0",
    "private": false,
    "description": "マインクラフト統合版アドオン開発用のファイル同期ツールです。",
    "type": "module",
    "bin": {
        "akhsync": "./dist/bin/akhsync.js"
    },
    "scripts": {
        "build": "tsc -p ./tsconfig.json --noEmit && esbuild src/**/*.ts --bundle --platform=node --outdir=dist --target=esnext --tsconfig=./tsconfig.json --format=esm --packages=external",
        "watch": "node esbuild.watch.js",
        "lint": "eslint --config ./eslint.config.js src/",
        "lint:fix": "eslint --fix --config ./eslint.config.js src/",
        "prettier": "prettier --check src/**/*.ts",
        "prettier:fix": "prettier --write src/**/*.ts",
        "fmt": "npm run prettier && npm run lint",
        "fmt:fix": "npm run prettier:fix && npm run lint:fix",
        "test": "npm run fmt && npm run build && vitest",
        "release": "npm run fmt & npm run build -- --pure:console.debug --minify"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/AKHstudio/akh_file_sync.git"
    },
    "keywords": [
        "minecraft",
        "addon",
        "akhstudio"
    ],
    "engines": {
        "node": ">=20.11.1"
    },
    "author": "tako1dayo (akhstudio)",
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/AKHstudio/akh_file_sync/issues"
    },
    "homepage": "https://github.com/AKHstudio/akh_file_sync#readme",
    "devDependencies": {
        "@eslint/js": "^9.21.0",
        "@types/archiver": "^6.0.3",
        "@types/cli-progress": "^3.11.6",
        "@types/fs-extra": "^11.0.4",
        "@types/glob": "^8.1.0",
        "@types/node": "^22.13.5",
        "eslint": "^9.21.0",
        "execa": "^9.6.0",
        "fs-extra": "^11.3.2",
        "globals": "^16.0.0",
        "prettier": "^3.5.3",
        "tempy": "^3.1.0",
        "tsx": "^4.19.3",
        "typescript-eslint": "^8.25.0",
        "vitest": "^3.2.4"
    },
    "dependencies": {
        "archiver": "^7.0.1",
        "chalk": "^5.4.1",
        "chokidar": "^4.0.3",
        "cli-progress": "^3.12.0",
        "commander": "^13.1.0",
        "esbuild": "^0.25.0",
        "glob": "^11.0.1",
        "listr2": "^8.2.5",
        "prismarine-nbt": "^2.7.0",
        "prompts": "^2.4.2",
        "strip-json-comments": "^5.0.3",
        "typescript": "^5.7.3"
    }
}
